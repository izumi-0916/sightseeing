.wrapper
  = render "more/header"
  .signup
    .signup__main
      .signup__main__center
        .signup__main__center__title
          新規登録
        .signup__main__center__box
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = render "devise/shared/error_messages", resource: resource
            .form-item
              %label.form-item__title
                名前
              %span.need
                必須
              %br/
              = f.text_field :name, placeholder: "例)taro", autofocus: true, autocomplete: "name", class: "form-item__title__form"
            .form-item
              %label.form-item__title
                メールアドレス
              %span.need
                必須
              %br/
              = f.email_field :email, placeholder: "例)sight@example.com", autofocus: true, autocomplete: "email", class: "form-item__title__form"
            .form-item
              %label.form-item__title
                パスワード
              %span.need
                必須
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length}文字以上)
              %br/
              = f.password_field :password, placeholder: "６文字以上の半角英数字", autocomplete: "new-password", class: "form-item__title__form"
            .form-item
              %label.form-item__title
                パスワード(確認)
              %span.need
                必須
              %br/
              = f.password_field :password_confirmation, placeholder: "６文字以上の半角英数字", autocomplete: "new-password", class: "form-item__title__form"
            .submit-btn
              = f.submit "登録"
        .sign-up
          = render "devise/shared/links"
  = render "more/footer"