.wrapper
  .header
    .header__title
      .header__title--icon
        %i.fa.fa-plane
      .header__title--name
        Sightseeing
    .header__text
      観光スポット探しアプリ
  .single-main
    .main-center
      .main-center__title
        新規登録画面の入力
      .main-center__box
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .field
            = f.label :ニックネーム
            %span.need
              必須
            %br/
            = f.text_field :name, placeholder: "ニックネーム", autofocus: true, autocomplete: "name"
          .field
            = f.label :メールアドレス
            %span.need
              必須
            %br/
            = f.email_field :email, placeholder: "ＰＣ・携帯どちらでも可", autofocus: true, autocomplete: "email"
          .field
            = f.label :パスワード
            %span.need
              必須
            - if @minimum_password_length
              %em
                (#{@minimum_password_length}文字以上)
            %br/
            = f.password_field :password, placeholder: "６文字以上の半角英数字", autocomplete: "new-password"
          .field
            = f.label :パスワード（確認）
            %span.need
              必須
            %br/
            = f.password_field :password_confirmation, placeholder: "６文字以上の半角英数字", autocomplete: "new-password"
          .actions
            .submit
              = f.submit "登録する"
            = render "devise/shared/links"